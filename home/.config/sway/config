set $mod Mod4

font pango:DejaVu Sans Mono for Powerline 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod normal

# clipboard
exec wl-paste -t text --watch clipman store 1>> ~/.local/share/clipman/clipman.log 2>&1 &
bindsym $mod+Control+v exec clipman pick -t wofi
bindsym $mod+Shift+v exec clipman clear -t wofi

# start a terminal
bindsym $mod+Return exec kitty -e fish
# password utilities
bindsym $mod+t exec passmenu --type
bindsym $mod+Shift+t exec passusermenu
bindsym $mod+Control+x exec swaylock -f -c 444444
bindsym $mod+p exec ~/.config/sway/screenshot.sh

# quickswitch navigation
bindsym $mod+m exec swaymsg -t get_tree | jq -r '.. | (.nodes? // empty)[] | select(.nodes==[]) | .name' | wofi --dmenu -p 'Focus window' | xargs -I '$' swaymsg '[title="$"] focus'
bindsym $mod+Shift+m exec swaymsg -t get_workspaces | jq -r '.[] | select(.name) | .name' | wofi --dmenu -p 'Focus workspace' | xargs -I '$' swaymsg "workspace $"
bindsym $mod+i exec swaymsg -t get_workspaces | jq -r '.[] | select(.name) | .name' | wofi --dmenu -p 'Move the current window to workspace' | xargs -I '$' swaymsg "move container to workspace $"
bindsym $mod+Shift+i exec swaymsg -t get_tree | jq -r '.. | (.nodes? // empty)[] | select(.nodes==[]) | .name' | wofi --dmenu -p 'Move window to the current workspace' | xargs -I '$' swaymsg '[title="$"] move container to workspace current'

# kill focused window
bindsym $mod+Shift+q kill

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# start dmenu (a program launcher)
bindsym $mod+space exec wofi --show run
bindsym $mod+d exec wofi --show drun

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Tab focus output left

# alternatively, you can use the cursor keys:
# bindsym $mod+Left focus left
# bindsym $mod+Down focus down
# bindsym $mod+Up focus up
# bindsym $mod+Right focus right

# move focused window
bindsym $mod+Control+h move left
bindsym $mod+Control+j move down
bindsym $mod+Control+k move up
bindsym $mod+Control+l move right

# alternatively, you can use the cursor keys:
# bindsym $mod+Shift+Left move left
# bindsym $mod+Shift+Down move down
# bindsym $mod+Shift+Up move up
# bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+b split h
# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen
bindsym $mod+Shift+f fullscreen global

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+Control+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+q focus child

bindsym $mod+Left workspace prev_on_output
bindsym $mod+Shift+h workspace prev_on_output
bindsym $mod+Right workspace next_on_output
bindsym $mod+Shift+l workspace next_on_output

bindsym $mod+Shift+n exec i3-input -F 'rename workspace to "%s"' -P 'Rename workspace: '
bindsym $mod+n exec i3-input -F 'workspace "%s"' -P 'Create workspace: '

bindsym $mod+y [urgent=latest] focus

bindsym $mod+u move container to output left
bindsym $mod+o move container to output right
bindsym $mod+Control+u move container to output down
bindsym $mod+Control+o move container to output up

bindsym $mod+Shift+u move workspace to output left
bindsym $mod+Shift+o move workspace to output right
bindsym $mod+Control+Shift+u move workspace to output down
bindsym $mod+Control+Shift+o move workspace to output up

# switch to workspace
bindsym $mod+1 workspace number 1 www
